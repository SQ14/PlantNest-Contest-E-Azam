            <div class="product-img">
                <a href="@Url.Action("ShopDetailPage", "user", new { id = item.plant_id })"><img src="@("~/PlantImages/" + item.plant_image)" style="height:250px" asp-append-version="true" alt=""></a>
                @*  <!-- Product Tag --> *@
                <div class="product-tag">
                    <a href="#">Hot</a>
                </div>
                <div class="product-meta d-flex">
