    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">

            <form asp-action="UpdateUser" method="post" class="p-4 border rounded"
                  style="background-color: #f9f9f9;" enctype="multipart/form-data">
                <input type="hidden" name="user_id" value="@Model[0].user_id" />


                <div class="form-group mb-3">
                    <input type="text" name="user_name" value="@Model[0].user_name" class="form-control" placeholder="Enter User Name" />
                </div>
                
                <div class="form-group mb-3">
                    <input type="email" name="user_email" value="@Model[0].user_email" class="form-control" placeholder="Enter User Email" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" name="user_contact" value="@Model[0].user_contact" class="form-control" placeholder="Enter User Contact" />
                </div>
                
                <div class="form-group mb-3">
                    <input type="text" name="user_username" value="@Model[0].user_username" class="form-control" placeholder="Enter User Username" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" name="user_password" value="@Model[0].user_password" class="form-control" placeholder="Enter User Password" />
                </div>

                <input type="hidden" name="user_image" value="@Model[0].user_image" />
                <div class="text-center">
                    <input type="submit" class="btn btn-success btn-block" value="Update Profile" style="width: 100%;" />
                </div>
            </form>
        </div>
    </div>
</div>
