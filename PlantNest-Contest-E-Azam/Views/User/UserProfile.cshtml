
@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
@model List<User>
<div class="container mt-5">
    <br />
    <h1 class="text-center mb-4 mt-5">Customer Profile</h1>
    <div class="author-box-center">
        <form asp-action="UpdateUserProfile" enctype="multipart/form-data" method="post" >
            <center>
                <img src="@("~/UserImages/"+Model[0].user_image)" hieght="100px" width="100px"
                     asp-append-version="true" class="rounded-circle author-box-picture" />
            </center>
            <center>
                <div class="author-box-name">
                    <a href="@Url.Action("UserProfile","user")">@Model[0].user_name</a>
                </div>
            </center>
            <input type="hidden" class="form-control" name="user_id" value="@Model[0].user_id"><br />
            <input type="hidden" class="form-control" name="user_name" value="@Model[0].user_name">
            <input type="hidden" class="form-control" name="user_email" value="@Model[0].user_email">
            <input type="hidden" class="form-control" name="user_contact" value="@Model[0].user_contact">
            <input type="hidden" class="form-control" name="user_username" value="@Model[0].user_username">
            <input type="hidden" class="form-control" name="user_password" value="@Model[0].user_password">
            <div class="row d-flex justify-content-center">
                <div class="col-md-3">
                    <input type="file" class="form-control " name="user_image" value="@Model[0].user_image">
                    <div class="clearfix"></div><br />
                    <input type="submit" class="btn btn-primary" value="Update User Image" />

                </div>
            </div>
        </form>
