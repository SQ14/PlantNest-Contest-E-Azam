
@{
    ViewData["Title"] = "DetailAccessory";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model Accessory
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <img src="@("~/AccessoryImages/"+Model.accessory_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                            <div class="clearfix"></div><br />
                            <div class="author-box-name">
                                <a href="">@Model.accessory_name</a>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="card">
                    <div class="card-header center">
                        <h4 class="text-center">Accessory Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    Accessory Id :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.accessory_id
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Accessory Name :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.accessory_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Accessory Purpose :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.accessory_purpose
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Accessory Price :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.accessory_price
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
    </section>

