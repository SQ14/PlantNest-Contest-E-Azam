
@{
    ViewData["Title"] = "AddAccessory";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Add Accessory</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-3 col-form-label">Accessory Name</label>
                                <div class="col-sm-9">
                                    <input type="text" placeholder="Accessory Name" name="accessory_name" class="form-control" id="inputEmail3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-3 col-form-label">Accessory Purpose</label>
                                <div class="col-sm-9">
                                    <input type="text" placeholder="Accessory Purpose" name="accessory_purpose" class="form-control" id="inputEmail3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-3 col-form-label">Accessory Price</label>
                                <div class="col-sm-9">
                                    <input type="number" placeholder="Accessory Price" name="accessory_price" class="form-control" id="inputEmail3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-3 col-form-label">Accessory Image</label>
                                <div class="col-sm-9">
                                    <input type="file"  name="accessory_image" class="form-control" id="inputEmail3">
                                </div>
                            </div>
                            <div class="card-footer center">
                                <input type="submit" value="Add Accessory" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



