
@{
    ViewData["Title"] = "DetailPlant";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model Plant
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <img src="@("~/PlantImages/"+Model.plant_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                            <div class="clearfix"></div><br />
                            <div class="author-box-name">
                                <a href="">@Model.plant_name</a>
                            </div>
                            <div class="author-box-job"> @Model.categories.category_name</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="card">
                    <div class="card-header center">
                        <h4 class="text-center">Plant Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    Plant Id :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.plant_id
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Plant Name :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.plant_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Plant Price :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.plant_price
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Plant Description :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.plant_description
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Category :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.categories.category_name
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
